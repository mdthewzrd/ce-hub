{
  "name": "CE-Hub Mobile IDE",
  "short_name": "CE-Hub",
  "description": "Mobile development environment for CE-Hub with full VS Code integration",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "theme_color": "#007acc",
  "background_color": "#1e1e1e",
  "scope": "/",
  "lang": "en-US",

  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "categories": ["productivity", "developer"],
  "shortcuts": [
    {
      "name": "Open Files",
      "short_name": "Files",
      "description": "Browse project files",
      "url": "/#files",
      "icons": [
        {
          "src": "icons/shortcut-files.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Open Terminal",
      "short_name": "Terminal",
      "description": "Access terminal",
      "url": "/#terminal",
      "icons": [
        {
          "src": "icons/shortcut-terminal.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Search Code",
      "short_name": "Search",
      "description": "Search in codebase",
      "url": "/#search",
      "icons": [
        {
          "src": "icons/shortcut-search.png",
          "sizes": "192x192"
        }
      ]
    }
  ],

  "screenshots": [
    {
      "src": "screenshots/mobile-editor.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile code editor interface"
    },
    {
      "src": "screenshots/mobile-panels.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile panels with file browser and terminal"
    },
    {
      "src": "screenshots/tablet-landscape.png",
      "sizes": "1024x768",
      "type": "image/png",
      "platform": "wide",
      "label": "Tablet landscape view"
    }
  ],

  "share_target": {
    "action": "/?share-target",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/?file",
      "accept": {
        "text/javascript": [".js", ".mjs"],
        "text/typescript": [".ts", ".tsx"],
        "application/json": [".json"],
        "text/html": [".html", ".htm"],
        "text/css": [".css"],
        "text/markdown": [".md", ".markdown"],
        "text/python": [".py"],
        "text/plain": [".txt", ".log"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "vscode",
      "url": "/?vscode=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}