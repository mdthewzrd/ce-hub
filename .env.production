# Production Trading System Configuration
# SECURITY: These are production secrets - keep them secure and never commit to version control

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://trading_user:your_secure_postgres_password_here@postgres:5432/trading_db

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379/0

# InfluxDB Configuration
INFLUXDB_PASSWORD=your_secure_influxdb_password_here
INFLUXDB_TOKEN=your_secure_influxdb_token_here
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_ORG=trading_org
INFLUXDB_BUCKET=market_data

# TimescaleDB Configuration
TIMESCALEDB_PASSWORD=your_secure_timescaledb_password_here
TIMESCALEDB_URL=postgresql://timeseries_user:your_secure_timescaledb_password_here@timescaledb:5432/timeseries_db

# RabbitMQ Configuration
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here
RABBITMQ_URL=amqp://trading_user:your_secure_rabbitmq_password_here@rabbitmq:5672/trading_vhost

# API Keys (Production)
POLYGON_API_KEY=your_production_polygon_api_key
ALPACA_API_KEY=your_production_alpaca_api_key
ALPACA_SECRET_KEY=your_production_alpaca_secret_key

# Interactive Brokers Configuration
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Archon MCP Configuration
ARCHON_API_KEY=your_production_archon_api_key
ARCHON_BASE_URL=https://api.archon.production

# Authentication
JWT_SECRET_KEY=your_extremely_secure_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Trading Agents Ecosystem
PROJECT_VERSION=1.0.0
DESCRIPTION=Professional-grade trading agents ecosystem

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://trading.yourdomain.com","https://api.trading.yourdomain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Trading Configuration
MAX_POSITION_SIZE=0.1
MAX_PORTFOLIO_RISK=0.02
MAX_DRAWDOWN=0.15
DEFAULT_COMMISSION=0.001
DEFAULT_SLIPPAGE=0.0001

# Scanner Configuration
SCANNER_MAX_SYMBOLS=1000
SCANNER_UPDATE_FREQUENCY=1
SCANNER_INDICATORS=["SMA","EMA","RSI","MACD","Bollinger Bands","ATR","ADX","Stochastic"]
SCANNER_TIMEFRAMES=["1m","5m","15m","1h","4h","1d"]

# Strategy Configuration
STRATEGY_INITIAL_CAPITAL=100000
STRATEGY_COMMISSION=0.001
STRATEGY_SLIPPAGE=0.0001
STRATEGY_BENCHMARK=SPY
STRATEGY_RISK_FREE_RATE=0.02

# Risk Management Configuration
RISK_MAX_PORTFOLIO_VAR=0.02
RISK_MAX_DRAWDOWN=0.15
RISK_MAX_LEVERAGE=2.0
RISK_MAX_CONCENTRATION=0.25
RISK_MAX_POSITION_SIZE=0.10
RISK_MAX_SECTOR_EXPOSURE=0.30

# Execution Configuration
EXECUTION_TIMEOUT=30
EXECUTION_MAX_RETRIES=3
EXECUTION_RETRY_DELAY=1
EXECUTION_MIN_LIQUIDITY=1000000
EXECUTION_MAX_PARTICIPATION=0.2

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your_production_sentry_dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=your_secure_grafana_password

# Email Configuration (for alerts)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.yourprovider.com
SMTP_USER=alerts@yourdomain.com
SMTP_PASSWORD=your_smtp_password
EMAILS_FROM_EMAIL=alerts@yourdomain.com
EMAILS_FROM_NAME=Trading Ecosystem Alerts

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Configuration
MAX_WORKERS=4
KEEP_ALIVE=2
MAX_CONNECTIONS=1000
MAX_KEEPALIVE_CONNECTIONS=100
KEEPALIVE_TIMEOUT=5

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_QUEUE_SIZE=10000

# Data Processing Configuration
DATA_RETENTION_DAYS=365
DATA_BATCH_SIZE=1000
DATA_PROCESSING_WORKERS=4

# Security Configuration
ALLOWED_HOSTS=["trading.yourdomain.com","api.trading.yourdomain.com","localhost"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=trading-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_RISK_ALERTS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_MODE=false

# Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false