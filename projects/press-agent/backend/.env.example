# Application
APP_NAME=Press Agent API
DEBUG=true

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# OpenRouter API
OPENROUTER_API_KEY=sk-or-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Archon MCP
